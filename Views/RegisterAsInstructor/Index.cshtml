@* @page
@model LoginModel *@

@* @{
    ViewData["Title"] = "Log in";
} *@

<link href="~/css/site.css" rel="stylesheet" />

@* <h1>@ViewData["Title"]</h1> *@
<div class="row">
    <div class="col-md-4">
        <h1 class=""> Register As Instructor</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                @*this div contains Login page input to accept user email address *@
                <div class="form-floating mb-3">
                    @* <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span> *@
                </div>

                @*this div contains Login page input to accept user password*@
                <div class="form-floating mb-3">
                    @* <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span> *@
                </div>
                <div class="checkbox mb-3">
                    @* <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label> *@
                </div>
                <div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </div>

                @*This div contains links that give the user options to confirm their email, reset their password, and resend email confrmation if not received in previous tries*@
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

